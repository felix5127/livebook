# Livebook MVP 环境变量配置示例
# 复制此文件为 .env.local 并填入真实值

# === 基础配置 ===
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1

# === DashScope AI配置 ===
# 阿里云DashScope API密钥（必填）
DASHSCOPE_API_KEY=your_dashscope_api_key_here
# DashScope API URL（可选，默认使用官方URL）
DASHSCOPE_API_URL=https://dashscope.aliyuncs.com/api/v1/services/audio/asr/paraformer

# === Supabase配置 ===
# Supabase项目URL（必填）
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
# Supabase匿名密钥（必填）
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
# Supabase服务密钥（必填，用于服务端操作）
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# === 安全配置 ===
# JWT签名密钥（必填，用于API认证）
JWT_SECRET=your_super_secure_jwt_secret_here
# API密钥加密密钥（必填）
API_KEY_SECRET=your_api_key_encryption_secret_here

# === 第三方服务配置 ===
# Kimi AI API配置（可选）
KIMI_API_KEY=your_kimi_api_key_here
KIMI_API_URL=https://api.moonshot.cn/v1

# === 部署配置 ===
# Vercel部署域名（生产环境）
NEXT_PUBLIC_VERCEL_URL=your-app.vercel.app
# 自定义域名（如果有）
NEXT_PUBLIC_DOMAIN=your-custom-domain.com

# === 调试配置 ===
# 是否启用详细日志（开发环境）
DEBUG=false
# 是否启用Bundle分析
ANALYZE=false

# === 速率限制配置 ===
# Redis连接URL（用于速率限制，可选）
REDIS_URL=redis://localhost:6379
# 默认速率限制（每分钟请求数）
RATE_LIMIT_RPM=10

# === 文件上传配置 ===
# 最大文件大小（MB）
MAX_FILE_SIZE=50
# 支持的文件格式
ALLOWED_FILE_TYPES=mp3,wav,m4a,mp4,mov,aac,flac,ogg

# === 监控配置 ===
# Sentry DSN（错误监控，可选）
SENTRY_DSN=your_sentry_dsn_here
# 性能监控采样率
SENTRY_TRACES_SAMPLE_RATE=0.1